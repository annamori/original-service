<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      
    <div class="panel panel-default">
     <div class="panel-body">
      <h4>年齢：<%= @user.age %>歳</h4>
      <h4>所在地：<%= @user.location %></h4>
      <h4>性別：<%= @user.gender %></h4>
      <h4>自己紹介：<%= @user.introduction %></h4>
     </div>
    </div>
    
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>投稿 (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>